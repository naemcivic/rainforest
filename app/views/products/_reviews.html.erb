<% if current_user %>
<p><em>Reviews for <%= @product.name %></em></p>
<% @product.reviews.order(created_at: :desc).each do |review| %>
  <p>
      <%= review.comment %>
    <br>
    <% if review.user != nil %>
      <em> by <%= review.user.name %></em>
      Added on: <%= review.created_at  %>
    <% end %>
  </p>
<% end %>
<% end %>
